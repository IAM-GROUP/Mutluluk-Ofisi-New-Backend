{
    "compilerOptions": {
        
        "lib": [
            "ESNext"
        ],
        "useDefineForClassFields": true,
        "strict": true,
        "module": "CommonJS",
        "alwaysStrict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": false,
        "target": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false
        
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
